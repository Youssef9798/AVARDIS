<%- include('../includes/header.ejs') %> <%-include('../includes/top-bar.ejs')
%>
<div class="container">
  <%-include('../includes/left-menu.ejs') %>
  <div class="main-backgournd form-background style-1">
    <div class="grid">
      <div class="page-title">
        <h1>DTCs Table</h1>
      </div>
      <div class="table-container">
        <div class="table">
          <div class="table-header">
            <div class="table-header-cell">
              Code
            </div>
            <div class="table-header-cell">
              Description
            </div>
          </div>
          <% if (dtcsData.length > 0) { %>
          <div class="table-body">
            <% dtcsData.forEach(dtcD => { %>
            <div class="table-row">
              <div class="table-body-cell">
                <%= dtcD.code %>
              </div>
              <div class="table-body-cell dec-cel">
                <%= dtcD.description %>
              </div>
            </div>
            <% }); %>
          </div>
          <% } %>
        </div>
        <% if (dtcsData.length == 0){ %>
        <div class="empty-table">
          <p>No DTC's data saved yet</p>
        </div>
        <% } %>
      </div>
    </div>
  </div>
</div>
<%- include('../includes/end.ejs') %>
