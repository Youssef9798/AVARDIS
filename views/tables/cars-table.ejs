<%- include('../includes/header.ejs') %> <%-include('../includes/top-bar.ejs')
%>
<div class="container">
  <%-include('../includes/left-menu.ejs') %>
  <div class="main-backgournd form-background style-1">
    <div class="grid">
      <div class="page-title">
        <h1>Cars Table</h1>
      </div>
      <div class="table-container">
        <div class="table">
          <div class="table-header">
            <div class="table-header-cell">
              Plate Number
            </div>
            <div class="table-header-cell">
              Model
            </div>
            <div class="table-header-cell">
              Color
            </div>
            <div class="table-header-cell">
              User SSN
            </div>
          </div>
          <% if (carsData.length > 0) { %>
          <div class="table-body">
            <% carsData.forEach(carsD => { %>
            <div class="table-row">
              <div class="table-body-cell">
                <%= carsD.plateNo %>
              </div>
              <div class="table-body-cell">
                <%= carsD.carModel %>
              </div>
              <div class="table-body-cell">
                <%= carsD.color %>
              </div>
              <div class="table-body-cell">
                <%= carsD.userSSN %>
              </div>
            </div>
            <% }); %>
          </div>
          <% } %>
        </div>
        <% if (carsData.length == 0){ %>
        <div class="empty-table">
          <p>No Cars data saved yet</p>
        </div>
        <% } %>
      </div>
    </div>
  </div>
</div>
<%- include('../includes/end.ejs') %>
