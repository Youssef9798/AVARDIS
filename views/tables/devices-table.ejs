<%- include('../includes/header.ejs') %> <%-include('../includes/top-bar.ejs')
%>
<div class="container">
  <%-include('../includes/left-menu.ejs') %>
  <div class="main-backgournd form-background style-1">
    <div class="grid">
      <div class="page-title">
        <h1>Devices Table</h1>
      </div>
      <div class="table-container">
        <div class="table">
          <div class="table-header">
            <div class="table-header-cell">
              ID
            </div>
            <div class="table-header-cell">
              MAC Address
            </div>
            <div class="table-header-cell">
              Car Plate Number
            </div>
          </div>
          <% if (devicesData.length > 0) { %>
          <div class="table-body">
            <% devicesData.forEach(deviceD => { %>
            <div class="table-row">
              <div class="table-body-cell">
                <%= deviceD.id %>
              </div>
              <div class="table-body-cell">
                <%= deviceD.macAddress %>
              </div>
              <div class="table-body-cell">
                <%= deviceD.carPlate %>
              </div>
            </div>
            <% }); %>
          </div>
          <% } %>
        </div>
        <% if (devicesData.length == 0){ %>
        <div class="empty-table">
          <p>No Cars data saved yet</p>
        </div>
        <% } %>
      </div>
    </div>
  </div>
</div>
<%- include('../includes/end.ejs') %>
